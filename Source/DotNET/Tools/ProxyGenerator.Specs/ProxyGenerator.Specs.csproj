<?xml version="1.0" encoding="UTF-8" ?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Arc.ProxyGenerator.Specs</AssemblyName>
        <RootNamespace>Cratis.Arc.ProxyGenerator</RootNamespace>
        <IsPackable>false</IsPackable>
        <IsTestProject>true</IsTestProject>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <!-- Disable StyleCop rules for test helper files containing multiple types -->
        <NoWarn>$(NoWarn);SA1649;SA1402</NoWarn>
        <!-- Enable runtime-specific native libraries for ClearScript V8 -->
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="../ProxyGenerator/ProxyGenerator.csproj" />
        <ProjectReference Include="../../Arc/Arc.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" />
        <PackageReference Include="Microsoft.ClearScript.V8" />
        <PackageReference Include="Microsoft.ClearScript.V8.Native.osx-arm64" Condition="$([MSBuild]::IsOSPlatform('OSX')) AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'Arm64'" />
        <PackageReference Include="Microsoft.ClearScript.V8.Native.osx-x64" Condition="$([MSBuild]::IsOSPlatform('OSX')) AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'X64'" />
        <PackageReference Include="Microsoft.ClearScript.V8.Native.linux-arm64" Condition="$([MSBuild]::IsOSPlatform('Linux')) AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'Arm64'" />
        <PackageReference Include="Microsoft.ClearScript.V8.Native.linux-x64" Condition="$([MSBuild]::IsOSPlatform('Linux')) AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'X64'" />
        <PackageReference Include="Microsoft.ClearScript.V8.Native.win-x64" Condition="$([MSBuild]::IsOSPlatform('Windows')) AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'X64'" />
        <PackageReference Include="Microsoft.ClearScript.V8.Native.win-arm64" Condition="$([MSBuild]::IsOSPlatform('Windows')) AND '$([System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture)' == 'Arm64'" />
    </ItemGroup>
    <ItemGroup>
        <Compile Remove="$(MSBuildThisFileDirectory)../../GlobalUsings.Specs.cs" />
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Include="Scenarios\Infrastructure\arc-bootstrap.js" Condition="Exists('Scenarios\Infrastructure\arc-bootstrap.js')" />
    </ItemGroup>
    <PropertyGroup>
        <ArcJavaScriptPath>$(MSBuildThisFileDirectory)../../../JavaScript/Arc</ArcJavaScriptPath>
        <ArcReactJavaScriptPath>$(MSBuildThisFileDirectory)../../../JavaScript/Arc.React</ArcReactJavaScriptPath>
        <!-- Default to always rebuild (CI behavior) -->
        <ArcNeedsRebuild>true</ArcNeedsRebuild>
        <ArcReactNeedsRebuild>true</ArcReactNeedsRebuild>
    </PropertyGroup>
    <Target Name="CheckJavaScriptTimestamps" BeforeTargets="BuildJavaScriptPackages" Condition="'$(CI)' == ''">
        <!-- Local optimization: check timestamps to potentially skip builds -->
        <Exec Command="bash '$(MSBuildThisFileDirectory)check-timestamp.sh' '$(ArcJavaScriptPath)'" ContinueOnError="true" StandardOutputImportance="low" StandardErrorImportance="low" IgnoreExitCode="false">
            <Output TaskParameter="ExitCode" PropertyName="ArcUpToDateCode" />
        </Exec>
        <Exec Command="bash '$(MSBuildThisFileDirectory)check-timestamp.sh' '$(ArcReactJavaScriptPath)'" ContinueOnError="true" StandardOutputImportance="low" StandardErrorImportance="low" IgnoreExitCode="false">
            <Output TaskParameter="ExitCode" PropertyName="ArcReactUpToDateCode" />
        </Exec>
        <PropertyGroup>
            <!-- Exit code 0 means up to date, 1 means needs rebuild -->
            <ArcNeedsRebuild Condition="'$(ArcUpToDateCode)' == '0'">false</ArcNeedsRebuild>
            <ArcNeedsRebuild Condition="'$(ArcUpToDateCode)' != '0'">true</ArcNeedsRebuild>
            <ArcReactNeedsRebuild Condition="'$(ArcReactUpToDateCode)' == '0'">false</ArcReactNeedsRebuild>
            <ArcReactNeedsRebuild Condition="'$(ArcReactUpToDateCode)' != '0'">true</ArcReactNeedsRebuild>
        </PropertyGroup>
    </Target>
    <Target Name="BuildJavaScriptPackages" BeforeTargets="BeforeBuild">
        <!-- Build JavaScript packages based on property conditions -->
        <Message Text="Building @cratis/arc JavaScript package..." Importance="high" Condition="$(ArcNeedsRebuild)" />
        <Exec Command="yarn build" WorkingDirectory="$(ArcJavaScriptPath)" Condition="$(ArcNeedsRebuild)" />
        <Message Text="Skipping @cratis/arc build - sources unchanged" Importance="high" Condition="!$(ArcNeedsRebuild)" />
        <Message Text="Building @cratis/arc.react JavaScript package..." Importance="high" Condition="$(ArcReactNeedsRebuild)" />
        <Exec Command="yarn build" WorkingDirectory="$(ArcReactJavaScriptPath)" Condition="$(ArcReactNeedsRebuild)" />
        <Message Text="Skipping @cratis/arc.react build - sources unchanged" Importance="high" Condition="!$(ArcReactNeedsRebuild)" />
    </Target>
</Project>
